<div class="field is-horizontal">
  <%= f.label "#{outer}_id" %>
  <div class="field-body">
  <% if node.ancestors.present? %>
    <% node.ancestors.reverse_each do |node| %>
      <%= render partial: 'nodes/outer_options', locals: { f: f, node: node, depth: node.depth, outer: outer } %>
    <% end %>
  <% else %>
    <%= render partial: 'nodes/outer_options', locals: { f: f, node: node, depth: 0, outer: outer } %>
  <% end %>
  </div>
</div>
