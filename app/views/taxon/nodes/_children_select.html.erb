<div class="field is-horizontal">
  <% if f.object.ancestors.present? %>
    <%= f.label :parent_ancestors %>
    <% f.object.ancestors.reverse_each do |item| %>
      <%= render partial: 'taxon/nodes/siblings_options', locals: { f: f, node: item } %>
    <% end %>
  <% elsif node %>
    <%= f.label :parent_ancestors %>
    <div class="field-body control">
      <%= render partial: 'taxon/nodes/children_options', locals: { f: f, node: node } %>
    </div>
  <% end %>
</div>
